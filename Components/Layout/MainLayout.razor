@inherits LayoutComponentBase
@inject NavigationManager Navigation
@inject CottageFinder.Services.BlazorNavigationService NavigationService

<MudThemeProvider />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<div class="page-content">
    @Body
</div>

<CottageFinder.Components.Shared.BottomNav />

@code {
    protected override void OnAfterRender(bool firstRender)
    {
        if (firstRender)
        {
            NavigationService.SetNavigationManager(Navigation);
        }
        base.OnAfterRender(firstRender);
    }
}
