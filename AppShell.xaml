<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CottageFinder.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:CottageFinder"
    Title="CottageFinder"
    FlyoutBackgroundColor="LightGray"
    FlyoutBehavior="Flyout">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:BlazorHostPage}"
        Route="MainPage" />

    <MenuItem 
        Text="Cottages"
        Clicked="OnCottagesClicked" />

    <MenuItem 
        Text="Sensor Readings"
        Clicked="OnSensorReadingsClicked" />

</Shell>
